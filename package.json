{
  "name": "github-pr-polyglot-line-counts",
  "version": "0.0.3",
  "description": "Language-aware line count statistics for GitHub pull requests with review time estimates",
  "main": "content.js",
  "scripts": {
    "test": "vitest run",
    "test:e2e": "node tests/e2e/run-tests.js",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"**/*.{js,json,css}\"",
    "format:check": "prettier --check \"**/*.{js,json,css}\"",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css}": [
      "prettier --write"
    ]
  },
  "keywords": [
    "chrome-extension",
    "github",
    "pull-request",
    "language-stats",
    "code-review"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.37.0",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.37.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.4",
    "prettier": "^3.6.2",
    "puppeteer": "^24.25.0",
    "vitest": "^3.2.4"
  },
  "type": "module"
}
