{
  "manifest_version": 3,
  "name": "GitHub PR Language Stats",
  "version": "1.0.0",
  "description": "Shows line count statistics by programming language for GitHub pull requests",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://github.com/*",
    "https://api.github.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://github.com/*/*/pull/*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}

